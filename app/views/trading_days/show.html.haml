.main
  #statistics
    %ul#day_statistics
      %li.profit_and_loss
        %p.figures{:style => "font-size: 3em; float: right"}
          = "$#{@trading_day.profit_and_loss.round(2)}"
      %li.wins_percentage
        %p.figures{:style => "font-size: 2em; float: right"}
          = "#{@trading_day.wins_percentage.round(2)}%"
      %li.wins_losses_ratio
        %p.figures{:style => "font-size: 2em; float: right"}
          - if @trading_day.losses_average != 0
          = "#{(@trading_day.wins / (@trading_day.losses)).to_f.round(3).abs}"
          - else
            = @trading_day.wins_average.to_f
        %p.clear
      %li.spaced
        = "Wins Average: $#{@trading_day.wins_average}"
      %li
        = "Losses Average $#{@trading_day.losses_average}"
      %li
        = "Wins: #{@trading_day.wins.round(2)}"
      %li
        = "Losses: #{@trading_day.losses.round(2)}"
      %li
        = "Amount of Winning Trades #{@trading_day.winning_trades}"
      %li
        = "Amount of Loosing Trades: #{@trading_day.loosing_trades}"
      %li
        = "Amount of Flat Trades: #{@trading_day.flat_trades}"
    %ul#stock_statistics
      - @trading_day.stocks_profit_and_loss.each do |spnl|
        %li{:id => spnl.symbol.upcase}
          %h3
            = spnl.symbol.upcase
          %ul
            %li
              = "Profit and Loss: #{spnl.profit_and_loss}"
            %li
              = "Wins Average: #{spnl.wins_average}"
            %li
              = "Losses Average #{spnl.losses_average}"
            %li
              = "Wins Percentage: #{spnl.wins_percentage}%"
            %li
              = "Wins: #{spnl.wins}"
            %li
              = "Losses: #{spnl.losses}"
            %li
              = "Winning Trades #{spnl.winning_trades}"
            %li
              = "Loosing Trades: #{spnl.loosing_trades}"
            %li
              = "Flat Trades: #{spnl.flat_trades}"
          %h3 
            = "Executions:"
          %table.executions
            %thead
              %tr
                %th Time
                %th Shares
                %th Price
                %th Side
                %th Contra
                %th Liquidity
                %th P&L
            %tbody
              - spnl.executions.each do |e|
                %tr{:class => cycle('odd', 'even')}
                  %td
                    = e.execution_time.strftime("%H:%M:%S")
                  %td
                    = e.shares
                  %td
                    = e.price
                  %td
                    = e.side
                  %td
                    = e.contra
                  %td
                    = e.liquidity
                  %td
                    -if e.profit_and_loss != 0.0
                      = e.profit_and_loss